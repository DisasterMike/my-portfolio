<div class="about-row flex-box f-justify-center">
  <div class="about-image-box flex-box f-align-center f-justify-end">
    <div class="about-img">
      <div class="img-box show" data-hobby-info-toggle-target="webPic" style="background-image: url('<%= image_path("MeDemoDay1.jpg") %>'); background-position: center; background-size: cover;"></div>
      <div class="img-box" data-hobby-info-toggle-target="gamesPic" style="background-image: url('<%= image_path("me.jpg") %>'); background-position: center; background-size: cover;"></div>
      <div class="img-box" data-hobby-info-toggle-target="boardPic" style="background-image: url('<%= image_path("MeAtLeWagon.jpg") %>'); background-position: center; background-size: cover;"></div>
    </div>
    <div class="about-img-back"></div>
  </div>
  <div class="about-info box-shadow flex-box">
    <div class="text-box flex-box">
      <div class="text-box-info">
        <div class="flex-box d-flex-column f-align-center" style="margin-bottom: 16px; text-align: center;">
          <h2><strong>Michael Stump</strong></h2>
          <h5><%= t("job-titles") %></h5>
        </div>
        <p><%= t("about-box-text").try(:html_safe) %>
        </p>
      </div>
      <div class="social-icons flex-box f-justify-center d-none">
        <%= link_to "https://www.linkedin.com/in/michael-a-stump/", target: :_blank do %>
          <i class="fa-brands fa-linkedin"></i>
        <% end %>
        <%= link_to "https://github.com/DisasterMike", target: :_blank do %>
          <i class="fa-brands fa-github"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
