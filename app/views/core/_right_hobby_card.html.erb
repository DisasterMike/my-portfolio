<div class="web-hobby flex-box" style="height: <%= div_height %>; padding: 32px;">
  <div class="flex-box d-flex-column" style="padding: 32px;">
    <%= link_to page_link, style: "text-decoration: none; color: var(--white-text);" do %>
      <h2><%= title %></h2>
    <% end %>
    <p><%= desc %>
    </p>
  </div>
  <div style="height: 100%; min-width: 250px; background-image: url('<%= image %>');
              background-size: cover;
              background-position: center;
              border-radius: 8px;
              border: 2px solid var(--grey);">
  </div>
</div>
