<div class="home-top">
  <header style="height: 10vh">
    <div class="wrapper">
      <%= render "core/language_toggle" %>
    </div>
  </header>
  <%= render "core/navbar" %>
  <div data-controller="logo-letters" class="banner" style="height: 83vh">
    <div class="flex-box f-justify-end" style="height: 100%; flex-direction: column;">
      <div class="flex-box f-justify-center f-align-center" style="flex-grow: 1;">
        <div class="banner-logo flex-box f-align-end">
          <%# image_tag "LogoWithName.png" %>
          <%# <h2>One</h2> %>
          <h3 class="hello-text">👇🏻 <%= t("logo-click-me") %></h3>
          <%= render "core/logo_banner" %>
          <%# <h1>S</h1> %>
        </div>
      </div>
      <%= render "core/home_marquee" %>
    </div>
  </div>
  <%# background: linear-gradient(#0F0F0F, #252525) %>
  <div id="profile" style="background: #C7C7C7; margin: 0;">
    <div class="row m-0">
      <%# <div class="col-12" style="height: 10vh;"></div> %>
      <div class="col-5 flex-box f-align-center f-justify-end" style="height: 75vh; position: relative;">
        <%= image_tag "me.jpg", width: "400px", style: "position: relative; right: 0; z-index: 2; transform: rotate(353deg); border: 10px solid white; filter: grayscale(100%);" %>
        <div style="width: 400px; height: 400px; background-color: var(--orange); position: absolute; top: 100px; z-index: 1; transform: rotate(7deg);"></div>
      </div>
      <div class="col-7 flex-box f-align-center">
        <div class="flex-box f-justify-center f-align-center" style="height: 50vh; width: 75%; background-color: white; position: relative; left: -20px; color: var(--black); border-radius: 8px;">
          <h2>About</h2>
        </div>
      </div>
      <div class="col-12 flex-box f-space-around" style="height: 20vh; padding: 0 60px; background-color: var(--black);">
        <div class="circular-icon flex-box f-justify-center f-align-center" style="height: 100px; width: 100px; border-radius: 50%; background-color: white; position: relative; top: -50px;">
          <i class="fa-brands fa-windows" style="color: black; font-size: 3rem;"></i>
        </div>
        <div class="circular-icon flex-box f-justify-center f-align-center" style="height: 100px; width: 100px; border-radius: 50%; background-color: white; position: relative; top: -50px;">
          <%= image_tag "unity-icon.png", width: "75px" %>
        </div>
        <div class="circular-icon" style="height: 100px; width: 100px; border-radius: 50%; background-color: white; position: relative; top: -50px;"></div>
      </div>
    </div>
  </div>
  <div id="hobbies" style="height: 100vh; background: linear-gradient(#252525, #373737);">
    <div style="min-height: 80px; border-bottom: 2px solid #e9e9e9; width: 45%; margin: 0 0 0 auto;">
    </div>
  </div>
  <div id="socials" style="height: 100vh; background-color: var(--grey)">
  </div>
  <footer  style="height: 50vh;">
    <p>©️One2ManyHats 2024</p>
    <div>
      <p></p>
    </div>
  </footer>
</div>
