<div data-controller="hobby-info-toggle" id="home-top">
  <header style="height: 10vh">
    <div class="wrapper">
      <%= render "core/language_toggle" %>
    </div>
  </header>
  <%= render "core/navbar" %>
  <div data-controller="logo-letters" class="banner" style="height: 83vh">
    <div class="flex-box f-justify-end" style="height: 100%; flex-direction: column;">
      <div class="flex-box f-justify-center f-align-center" style="flex-grow: 1; flex-direction: column;">
        <div class="banner-logo flex-box f-align-end">
          <div class="hello-text flex-box f-justify-center f-align-center">
            <h3>👇🏻 <%= t("logo-click-me") %></h3>
          </div>
          <%= render "core/logo_banner" %>
        </div>
        <div class="scroll-down-arrow">
          <%= link_to "#profile" do %>
            <i class="fa-solid fa-angle-down"></i>
          <% end %>
        </div>
      </div>
      <%= render "core/home_marquee" %>
    </div>
  </div>
  <div id="profile" style="background: #ebebeb; padding: 65px 0 0 0;">
    <%= render "core/home_about_row" %>
    <%= render "core/home_hobby_buttons" %>
  </div>
  <a id="hobbies"></a>
  <div style="background-color: var(--black);">
    <div class="h-container" style="padding: 20px 0 80px 0;">
      <% div_height = "350px" %>
      <div class="hobbies-info flex-box f-justify-center" style="height: <%= div_height %>; overflow: hidden;">
        <div data-hobby-info-toggle-target="mover" class="hobbies-mover">
          <% web_title = "Web Stuff" %>
          <% web_desc =
            "Lorem ipsum dolor, sit amet consectetur adipisicing elit.
            Eius doloribus porro provident, rem quisquam dignissimos.
            Aliquam voluptatem dignissimos quos blanditiis dolor ratione,
            explicabo autem vel pariatur aperiam praesentium illo dicta!"
          %>
          <%= render "core/left_hobby_card", title: web_title, desc: web_desc, div_height: div_height,  image: "url('https://image.api.playstation.com/cdn/UP0002/CUSA12125_00/BKB7gqk3YJvlXkwLCBIC4PkuXkfy2Hg4.png')" %>
          <% games_title = "Games Stuff" %>
          <% games_desc =
            "Lorem ipsum dolor, sit amet consectetur adipisicing elit.
            Eius doloribus porro provident, rem quisquam dignissimos.
            Aliquam voluptatem dignissimos quos blanditiis dolor ratione,
            explicabo autem vel pariatur aperiam praesentium illo dicta!"
          %>
          <%= render "core/right_hobby_card", title: games_title, desc: games_desc, div_height: div_height,  image: "url('https://image.api.playstation.com/cdn/UP0002/CUSA12125_00/BKB7gqk3YJvlXkwLCBIC4PkuXkfy2Hg4.png')" %>
          <% board_game_title = "Board Game Stuff" %>
          <% board_game_desc =
            "Lorem ipsum dolor, sit amet consectetur adipisicing elit.
            Eius doloribus porro provident, rem quisquam dignissimos.
            Aliquam voluptatem dignissimos quos blanditiis dolor ratione,
            explicabo autem vel pariatur aperiam praesentium illo dicta!"
          %>
          <%= render "core/left_hobby_card", title: board_game_title, desc: board_game_desc, div_height: div_height,  image: "url('https://image.api.playstation.com/cdn/UP0002/CUSA12125_00/BKB7gqk3YJvlXkwLCBIC4PkuXkfy2Hg4.png')" %>
        </div>
      </div>
    </div>
  </div>
  <div id="contact" style="height: 75vh; background-color: var(--grey)">
    <h2>(Mail me section)</h2>
    <div class="scroll-up-arrow">
      <%= link_to "#home-top" do %>
        <i class="fa-solid fa-angle-up"></i>
      <% end %>
    </div>
  </div>
  <footer style="height: 15vh;">
    <p>©️One2ManyHats 2024</p>
    <div>
      <p></p>
    </div>
  </footer>
</div>
