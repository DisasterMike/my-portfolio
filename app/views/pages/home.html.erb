<div data-controller="hobby-info-toggle" class="home-top">
  <header style="height: 10vh">
    <div class="wrapper">
      <%= render "core/language_toggle" %>
    </div>
  </header>
  <%= render "core/navbar" %>
  <div data-controller="logo-letters" class="banner" style="height: 83vh">
    <div class="flex-box f-justify-end" style="height: 100%; flex-direction: column;">
      <div class="flex-box f-justify-center f-align-center" style="flex-grow: 1; flex-direction: column;">
        <div class="banner-logo flex-box f-align-end">
          <h3 class="hello-text">👇🏻 <%= t("logo-click-me") %></h3>
          <%= render "core/logo_banner" %>
        </div>
        <div class="scroll-down-arrow">
          <%= link_to "#profile" do %>
            <i class="fa-solid fa-angle-down" style="color: var(--white-text);
                position: absolute;
                bottom: 100px;
                font-size: 2rem;">
            </i>
          <% end %>
        </div>
      </div>
      <%= render "core/home_marquee" %>
    </div>
  </div>
  <div id="profile" style="background: #ebebeb; padding: 65px 0 0 0;">
    <%= render "core/home_about_row" %>
    <%= render "core/home_hobby_buttons" %>
  </div>
  <div id="hobbies" style="height: 75vh; background-color: var(--black);">
  </div>
  <div id="contact" style="height: 75vh; background-color: var(--grey)">
    <h2>(Mail me section)</h2>
  </div>
  <footer  style="height: 15vh;">
    <p>©️One2ManyHats 2024</p>
    <div>
      <p></p>
    </div>
  </footer>
</div>
