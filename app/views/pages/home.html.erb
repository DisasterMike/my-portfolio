<div class="home-top">
  <header style="height: 10vh">
    <div class="wrapper">
      <%= render "core/language_toggle" %>
    </div>
  </header>
  <%= render "core/navbar" %>
  <div data-controller="logo-letters" class="banner" style="height: 83vh">
    <div class="flex-box f-justify-end" style="height: 100%; flex-direction: column;">
      <div class="flex-box f-justify-center f-align-center" style="flex-grow: 1;">
        <div class="banner-logo flex-box f-align-end">
          <h3 class="hello-text">👇🏻 <%= t("logo-click-me") %></h3>
          <%= render "core/logo_banner" %>
        </div>
      </div>
      <%= render "core/home_marquee" %>
    </div>
  </div>
  <%# background: linear-gradient(#0F0F0F, #252525) %>
  <div id="profile" style="background: #ebebeb; padding-bottom: 65px;">
    <div class="about-row row m-0">
      <%# <div class="col-12" style="height: 10vh;"></div> %>
      <div class="col-5 flex-box f-align-center f-justify-end" style="height: 65vh; position: relative;">
        <%= image_tag "me.jpg", width: "400px" %>
        <div class="about-img-back"></div>
      </div>
      <div class="col-7 flex-box f-align-center">
        <div class="about-info flex-box f-justify-center">
          <div style="margin: 12px; border: 8px solid #e0e0e0; border-radius: 8px;">
            <div class="text-box flex-box">
              <div class="text-box-info">
                <h2>About Me</h2>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Natus sint suscipit placeat nobis illum omnis,
                  similique itaque velit in dignissimos sit magni ipsum vel magnam nam. Eum, doloribus quisquam. Facilis?</p>
              </div>
              <div class="social-icons flex-box f-justify-center">
                <i class="fa-brands fa-linkedin"></i>
                <i class="fa-brands fa-github"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div data-controller="hobby-info-toggle" id="hobbies" style="height: 75vh; background-color: var(--black);">
    <div class="col-12 flex-box f-space-around">
      <div style="display: flex; flex-direction: column; align-items: center;">
        <div data-action="mouseenter->hobby-info-toggle#hover" data-hobby-info-toggle-target="button" class="hobby-circular-icon active flex-box f-justify-center f-align-center">
          <%= image_tag "web-icon.png", width: "55px" %>
        </div>
        <h4 style="position: relative; bottom: 15px;">Web</h4>
      </div>
      <div style="display: flex; flex-direction: column; align-items: center;">
        <div data-action="mouseenter->hobby-info-toggle#hover" data-hobby-info-toggle-target="button" class="hobby-circular-icon flex-box f-justify-center f-align-center">
          <%= image_tag "unity-icon.png", width: "60px" %>
        </div>
        <h4 style="position: relative; bottom: 15px;">Games</h4>
      </div>
      <div style="display: flex; flex-direction: column; align-items: center;">
        <div data-action="mouseenter->hobby-info-toggle#hover" data-hobby-info-toggle-target="button" class="hobby-circular-icon flex-box f-justify-center f-align-center">
          <%= image_tag "meeple-icon.png", width: "55px" %>
        </div>
        <h4 style="position: relative; bottom: 15px;">Board Games</h4>
      </div>
    </div>
  </div>
  <div id="socials" style="height: 75vh; background-color: var(--grey)">
  </div>
  <footer  style="height: 15vh;">
    <p>©️One2ManyHats 2024</p>
    <div>
      <p></p>
    </div>
  </footer>
</div>
